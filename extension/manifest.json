{
  "manifest_version": 3,
  "name": "BookMinder",
  "version": "1.0",
  "description": "Save bookmarks with page content to BookMinder API",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://192.168.1.112:9090/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Bookmark"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}